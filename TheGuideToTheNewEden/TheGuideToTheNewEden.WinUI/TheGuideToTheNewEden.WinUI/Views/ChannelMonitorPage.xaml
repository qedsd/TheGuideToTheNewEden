    mc:Ignorable="d">
    <Page.DataContext>
        <viewmodels:ChannelMonitorViewModel x:Name="VM" />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
