<Page
    x:Class="TheGuideToTheNewEden.WinUI.Views.ZKBHomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TheGuideToTheNewEden.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid>
        <TabView
            x:Name="ContentTabView"
            Grid.RowSpan="2"
            CloseButtonOverlayMode="OnPointerOver"
            IsAddTabButtonVisible="False">
            <!--<TabView.TabStripHeader>
                <Grid Width="100">
                    <Button>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10F;" />
                    </Button>
                </Grid>
            </TabView.TabStripHeader>-->
            <TabView.TabStripFooter>
                <Grid>
                    <AutoSuggestBox Width="200" QueryIcon="Find" />
                </Grid>
            </TabView.TabStripFooter>
            <TabView.TabItems>
                <TabViewItem>
                    <TabViewItem.Header>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10F;" />
                    </TabViewItem.Header>
                    <TabViewItem.IconSource>
                        <BitmapIconSource ShowAsMonochrome="False" UriSource="logo_32.png" />
                    </TabViewItem.IconSource>
                </TabViewItem>
            </TabView.TabItems>
        </TabView>
    </Grid>
</Page>
