<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TheGuideToTheNewEden.WinUI.Views.TabViewBasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TheGuideToTheNewEden.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid>
        <Frame x:Name="ContentFrame" Background="Transparent" />
        <Grid x:Name="WaitingGrid" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Opacity="0.7" Color="{ThemeResource ThemeMainColor}" />
            </Grid.Background>
            <Grid Height="100">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <ProgressRing
                    x:Name="WaitingProgressRing"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
                <TextBlock
                    x:Name="WaitingText"
                    Grid.Row="1"
                    Margin="10"
                    HorizontalAlignment="Center" />
            </Grid>
        </Grid>
    </Grid>
</Page>
