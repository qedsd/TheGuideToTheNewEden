<Page
    x:Class="TheGuideToTheNewEden.WinUI.Views.GamePreviewMgrPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gamepreviews="using:TheGuideToTheNewEden.Core.Models.GamePreviews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:TheGuideToTheNewEden.WinUI.ViewModels"
    Background="Transparent"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewmodels:GamePreviewMgrViewModel x:Name="VM" />
    </Page.DataContext>
    <Grid x:Name="ContentGrid" Margin="20,10,20,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="320" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="64" />
            </Grid.RowDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    PlaceholderText="多个关键词时，使用符号,分割"
                    Text="{x:Bind VM.PreviewSetting.ProcessKeywords, Mode=TwoWay}"
                    ToolTipService.ToolTip="进程关键词" />
                <Button
                    Grid.Column="1"
                    VerticalAlignment="Stretch"
                    Command="{x:Bind VM.RefreshProcessListCommand}"
                    ToolTipService.ToolTip="刷新列表">
                    <Button.Content>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE149;" />
                    </Button.Content>
                </Button>
            </Grid>
            <ListView
                x:Name="ProcessList"
                Grid.Row="1"
                Margin="0,10,0,10"
                AllowDrop="True"
                Background="Transparent"
                CanDragItems="True"
                CanReorderItems="True"
                DragEnter="ProcessList_DragEnter"
                DragItemsStarting="ProcessList_DragItemsStarting"
                DragOver="ProcessList_DragOver"
                Drop="ProcessList_Drop"
                ItemsSource="{x:Bind VM.Processes, Mode=OneWay}"
                SelectedItem="{x:Bind VM.SelectedProcess, Mode=TwoWay}"
                Style="{StaticResource StretchListView}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="gamepreviews:ProcessInfo">
                        <Grid Margin="4,8">
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Click="MenuFlyoutItem_Up_Click" Text="{StaticResource GamePreviewMgrPage_MoveUp}" />
                                    <MenuFlyoutItem Click="MenuFlyoutItem_Down_Click" Text="{StaticResource GamePreviewMgrPage_MoveDown}" />
                                </MenuFlyout>
                            </Grid.ContextFlyout>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid>
                                    <TextBlock
                                        HorizontalAlignment="Stretch"
                                        Text="{x:Bind WindowTitle}"
                                        ToolTipService.ToolTip="{x:Bind WindowTitle}" />
                                </Grid>
                                <TextBlock
                                    Grid.Row="1"
                                    Margin="0,4,0,0"
                                    Text="{x:Bind GetUserName(), Mode=OneWay}" />
                                <TextBlock
                                    Grid.Row="2"
                                    Margin="0,4,0,0"
                                    Text="{x:Bind SettingName, Mode=OneWay}"
                                    Visibility="{x:Bind ShowSettingName, Mode=OneWay, Converter={StaticResource TrueToVisibleConverter}}" />
                            </Grid>
                            <Rectangle
                                Grid.Column="1"
                                Width="10"
                                Height="10"
                                Margin="4,0,0,0"
                                Fill="{ThemeResource SystemAccentColor}"
                                RadiusX="10"
                                RadiusY="10"
                                ToolTipService.ToolTip="预览中"
                                Visibility="{x:Bind Running, Mode=OneWay, Converter={StaticResource TrueToVisibleConverter}}" />
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid Grid.Row="2" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Rectangle Height="1" Fill="{ThemeResource SystemAccentColor}" />
                <TextBlock
                    Grid.Column="1"
                    Margin="8,0"
                    Text="游戏列表" />
                <Rectangle
                    Grid.Column="2"
                    Height="1"
                    Fill="{ThemeResource SystemAccentColor}" />
            </Grid>
            <StackPanel
                Grid.Row="3"
                Margin="8"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <SplitButton
                    Height="32"
                    Command="{x:Bind VM.StartAllCommand}"
                    ToolTipService.ToolTip="开始全部">
                    <SplitButton.Content>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE102;" />
                    </SplitButton.Content>
                    <SplitButton.Flyout>
                        <Flyout>
                            <StackPanel>
                                <CheckBox Content="开始无保存设置的进程" IsChecked="{x:Bind VM.PreviewSetting.StartAllWithNoneSetting, Mode=TwoWay}" />
                                <Rectangle
                                    Height="1"
                                    Margin="0,8"
                                    Fill="{ThemeResource SystemAccentColor}" />
                                <ComboBox
                                    Header="加载配置方式"
                                    IsEnabled="{x:Bind VM.PreviewSetting.StartAllWithNoneSetting, Mode=OneWay}"
                                    SelectedIndex="{x:Bind VM.PreviewSetting.StartAllDefaultLoadType, Mode=TwoWay}">
                                    <ComboBoxItem Content="优先依序使用保存列表中的配置" />
                                    <ComboBoxItem Content="使用默认配置" />
                                </ComboBox>
                            </StackPanel>
                        </Flyout>
                    </SplitButton.Flyout>
                </SplitButton>
                <Button
                    Grid.Column="2"
                    Height="32"
                    Margin="4,0"
                    Command="{x:Bind VM.StopAllCommand}"
                    ToolTipService.ToolTip="暂停全部"
                    Visibility="{x:Bind VM.Running, Mode=OneWay, Converter={StaticResource TrueToVisibleConverter}}">
                    <Button.Content>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE103;" />
                    </Button.Content>
                </Button>
                <Button
                    Grid.Column="2"
                    Height="32"
                    ToolTipService.ToolTip="全局设置">
                    <Button.Content>
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE115;" />
                    </Button.Content>
                    <Button.Flyout>
                        <Flyout>
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel>
                                    <Grid Margin="8,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Rectangle Height="1" Fill="{ThemeResource SystemAccentColor}" />
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="8,0"
                                            Orientation="Horizontal">
                                            <TextBlock Text="切换快捷键" />
                                            <Button
                                                Width="24"
                                                Height="24"
                                                Margin="4,0,0,0"
                                                Padding="0"
                                                BorderThickness="0"
                                                Content="!">
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <TextBlock Text="按下快捷键时，按激活顺序依次切换显示相应的游戏窗口" />
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                        </StackPanel>
                                        <Rectangle
                                            Grid.Column="2"
                                            Height="1"
                                            Fill="{ThemeResource SystemAccentColor}" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="{StaticResource GamePreviewMgrPage_Forward}" />
                                        <TextBox
                                            Grid.Column="1"
                                            Margin="4,0"
                                            PlaceholderText="组合键使用+拼接 eg： Ctrl+1"
                                            Text="{x:Bind VM.PreviewSetting.SwitchHotkey_Forward, Mode=TwoWay}" />
                                        <Button
                                            Grid.Column="2"
                                            Command="{x:Bind VM.SetForwardHotkeyCommand}"
                                            Content="{StaticResource GamePreviewMgrPage_SetHotKey}" />
                                    </Grid>
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="{StaticResource GamePreviewMgrPage_Backward}" />
                                        <TextBox
                                            Grid.Column="1"
                                            Margin="4,0"
                                            PlaceholderText="组合键使用+拼接 eg： Ctrl+1"
                                            Text="{x:Bind VM.PreviewSetting.SwitchHotkey_Backward, Mode=TwoWay}" />
                                        <Button
                                            Grid.Column="2"
                                            Command="{x:Bind VM.SetBackwardHotkeyCommand}"
                                            Content="{StaticResource GamePreviewMgrPage_SetHotKey}" />
                                    </Grid>
                                    <ComboBox
                                        Margin="0,8,0,0"
                                        HorizontalAlignment="Stretch"
                                        Header="{StaticResource GamePreviewMgrPage_SwitchMode}"
                                        SelectedIndex="{x:Bind VM.PreviewSetting.SetForegroundWindowMode, Mode=TwoWay}">
                                        <ComboBoxItem Content="{StaticResource GamePreviewMgrPage_SwitchMode_0}" />
                                        <ComboBoxItem Content="{StaticResource GamePreviewMgrPage_SwitchMode_1}" />
                                        <ComboBoxItem Content="{StaticResource GamePreviewMgrPage_SwitchMode_2}" />
                                        <ComboBoxItem Content="{StaticResource GamePreviewMgrPage_SwitchMode_3}" />
                                        <ComboBoxItem Content="{StaticResource GamePreviewMgrPage_SwitchMode_4}" />
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Grid.Row="1" Margin="0,24">
                                    <Grid Margin="8,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Rectangle Height="1" Fill="{ThemeResource SystemAccentColor}" />
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="8,0"
                                            Orientation="Horizontal">
                                            <TextBlock Text="统一窗口大小" />
                                            <Button
                                                Width="24"
                                                Height="24"
                                                Margin="4,0,0,0"
                                                Padding="0"
                                                BorderThickness="0"
                                                Content="!">
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <TextBlock Text="将所有的预览窗口设置为指定的大小" />
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                        </StackPanel>
                                        <Rectangle
                                            Grid.Column="2"
                                            Height="1"
                                            Fill="{ThemeResource SystemAccentColor}" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <NumberBox
                                            Minimum="1"
                                            PlaceholderText="窗口宽度"
                                            ToolTipService.ToolTip="窗口宽度"
                                            Value="{x:Bind VM.PreviewSetting.UniformWidth, Mode=TwoWay}" />
                                        <TextBlock
                                            Grid.Column="1"
                                            Margin="4,0"
                                            VerticalAlignment="Center"
                                            Text="×" />
                                        <NumberBox
                                            Grid.Column="2"
                                            Minimum="1"
                                            PlaceholderText="窗口高度"
                                            ToolTipService.ToolTip="窗口高度"
                                            Value="{x:Bind VM.PreviewSetting.UniformHeight, Mode=TwoWay}" />
                                    </Grid>
                                    <Button
                                        Margin="0,8,0,0"
                                        HorizontalAlignment="Stretch"
                                        Command="{x:Bind VM.SetUniformSizeCommand}"
                                        Content="应用" />
                                </StackPanel>
                                <StackPanel Grid.Row="2" Margin="0,8,0,16">
                                    <Grid Margin="8,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Rectangle Height="1" Fill="{ThemeResource SystemAccentColor}" />
                                        <StackPanel
                                            Grid.Column="1"
                                            Margin="8,0"
                                            Orientation="Horizontal">
                                            <TextBlock Text="自动对齐窗口" />
                                            <Button
                                                Width="24"
                                                Height="24"
                                                Margin="4,0,0,0"
                                                Padding="0"
                                                BorderThickness="0"
                                                Content="!">
                                                <Button.Flyout>
                                                    <Flyout>
                                                        <TextBlock
                                                            Width="300"
                                                            Text="以当前游戏进程的预览窗口作为参考，自动将其余预览窗口按照指定布局对齐"
                                                            TextWrapping="Wrap" />
                                                    </Flyout>
                                                </Button.Flyout>
                                            </Button>
                                        </StackPanel>

                                        <Rectangle
                                            Grid.Column="2"
                                            Height="1"
                                            Fill="{ThemeResource SystemAccentColor}" />
                                    </Grid>
                                    <Grid Margin="0,8">
                                        <Grid.Resources>
                                            <Style x:Key="MainItemGrid" TargetType="Grid">
                                                <Setter Property="Margin" Value="2" />
                                                <Setter Property="Width" Value="24" />
                                                <Setter Property="Height" Value="16" />
                                                <Setter Property="BorderThickness" Value="1" />
                                                <Setter Property="Background" Value="{ThemeResource SystemAccentColor}" />
                                                <Setter Property="BorderBrush" Value="{ThemeResource SystemAccentColor}" />
                                            </Style>
                                            <Style x:Key="OtherItemGrid" TargetType="Grid">
                                                <Setter Property="Margin" Value="2" />
                                                <Setter Property="Width" Value="24" />
                                                <Setter Property="Height" Value="16" />
                                                <Setter Property="BorderThickness" Value="1" />
                                                <Setter Property="BorderBrush" Value="{ThemeResource SystemAccentColor}" />
                                            </Style>
                                            <Style x:Key="MainPointGrid" TargetType="Grid">
                                                <Setter Property="Margin" Value="4" />
                                                <Setter Property="Width" Value="4" />
                                                <Setter Property="Height" Value="4" />
                                                <Setter Property="Background" Value="{ThemeResource SystemAccentColor}" />
                                                <Setter Property="CornerRadius" Value="2" />
                                            </Style>
                                            <Style x:Key="BorderGrid" TargetType="Grid">
                                                <Setter Property="Width" Value="56" />
                                                <Setter Property="Height" Value="40" />
                                                <Setter Property="BorderThickness" Value="1" />
                                                <Setter Property="BorderBrush" Value="{ThemeResource SystemAccentColor}" />
                                            </Style>
                                        </Grid.Resources>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="16" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <ComboBox
                                            Width="140"
                                            Header="对齐方式"
                                            SelectedIndex="{x:Bind VM.PreviewSetting.AutoLayout, Mode=TwoWay}">
                                            <ComboBoxItem>
                                                <StackPanel Orientation="Horizontal">
                                                    <Grid Style="{StaticResource MainItemGrid}" />
                                                    <Grid Style="{StaticResource OtherItemGrid}" />
                                                    <Grid Style="{StaticResource OtherItemGrid}" />
                                                </StackPanel>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <StackPanel Orientation="Horizontal">
                                                    <Grid Style="{StaticResource OtherItemGrid}" />
                                                    <Grid Style="{StaticResource OtherItemGrid}" />
                                                    <Grid Style="{StaticResource MainItemGrid}" />
                                                </StackPanel>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <StackPanel Orientation="Vertical">
                                                    <Grid Style="{StaticResource MainItemGrid}" />
                                                    <Grid Style="{StaticResource OtherItemGrid}" />
                                                    <Grid Style="{StaticResource OtherItemGrid}" />
                                                </StackPanel>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <StackPanel Orientation="Vertical">
                                                    <Grid Style="{StaticResource OtherItemGrid}" />
                                                    <Grid Style="{StaticResource OtherItemGrid}" />
                                                    <Grid Style="{StaticResource MainItemGrid}" />
                                                </StackPanel>
                                            </ComboBoxItem>
                                        </ComboBox>

                                        <!--  左对齐  -->
                                        <ComboBox
                                            Grid.Column="2"
                                            Width="140"
                                            Header="对齐位置"
                                            SelectedIndex="{x:Bind VM.PreviewSetting.AutoLayoutAnchor, Mode=TwoWay}"
                                            Visibility="{x:Bind VM.PreviewSetting.AutoLayout, Mode=OneWay, Converter={StaticResource StringMatchToVisibleConverter}, ConverterParameter=0}">
                                            <ComboBoxItem>
                                                <!--  右上  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <!--  右中  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <!--  右下  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Bottom"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                        </ComboBox>
                                        <!--  右对齐  -->
                                        <ComboBox
                                            Grid.Column="2"
                                            Width="140"
                                            Header="对齐位置"
                                            SelectedIndex="{x:Bind VM.PreviewSetting.AutoLayoutAnchor, Mode=TwoWay}"
                                            Visibility="{x:Bind VM.PreviewSetting.AutoLayout, Mode=OneWay, Converter={StaticResource StringMatchToVisibleConverter}, ConverterParameter=1}">
                                            <ComboBoxItem>
                                                <!--  左上  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <!--  左中  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <!--  左下  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Bottom"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                        </ComboBox>
                                        <!--  上对齐  -->
                                        <ComboBox
                                            Grid.Column="2"
                                            Width="140"
                                            Header="对齐位置"
                                            SelectedIndex="{x:Bind VM.PreviewSetting.AutoLayoutAnchor, Mode=TwoWay}"
                                            Visibility="{x:Bind VM.PreviewSetting.AutoLayout, Mode=OneWay, Converter={StaticResource StringMatchToVisibleConverter}, ConverterParameter=2}">
                                            <ComboBoxItem>
                                                <!--  左下  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Bottom"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <!--  中下  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Bottom"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <!--  右下  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Bottom"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                        </ComboBox>
                                        <!--  下对齐  -->
                                        <ComboBox
                                            Grid.Column="2"
                                            Width="140"
                                            Header="对齐位置"
                                            SelectedIndex="{x:Bind VM.PreviewSetting.AutoLayoutAnchor, Mode=TwoWay}"
                                            Visibility="{x:Bind VM.PreviewSetting.AutoLayout, Mode=OneWay, Converter={StaticResource StringMatchToVisibleConverter}, ConverterParameter=3}">
                                            <ComboBoxItem>
                                                <!--  左上  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <!--  中上  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Top"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                            <ComboBoxItem>
                                                <!--  右上  -->
                                                <Grid Style="{StaticResource BorderGrid}">
                                                    <Grid
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Top"
                                                        Style="{StaticResource MainPointGrid}" />
                                                </Grid>
                                            </ComboBoxItem>
                                        </ComboBox>
                                    </Grid>
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="对齐间隔" />
                                        <NumberBox
                                            Grid.Column="1"
                                            Margin="16,0,0,0"
                                            Value="{x:Bind VM.PreviewSetting.AutoLayoutSpan, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid Margin="0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="{StaticResource GamePreviewMgrPage_AutoLayoutCount}" />
                                        <NumberBox
                                            Grid.Column="1"
                                            Margin="16,0,0,0"
                                            Value="{x:Bind VM.PreviewSetting.AutoLayoutCount, Mode=TwoWay}" />
                                    </Grid>
                                    <Button
                                        HorizontalAlignment="Stretch"
                                        Command="{x:Bind VM.SetAutoLayoutCommand}"
                                        Content="应用" />
                                </StackPanel>
                            </Grid>
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </Grid>
        <Grid
            Grid.Column="1"
            Margin="10,0"
            Visibility="{x:Bind VM.SettingVisible, Mode=OneWay}">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="0" IsEnabled="{x:Bind VM.SelectedProcess.Running, Mode=OneWay, Converter={StaticResource BoolReverseConverte}}">
                <StackPanel x:Name="SettingArea" Margin="8,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="SettingNameBox"
                            Text="{x:Bind VM.Setting.Name, Mode=OneWay}"
                            ToolTipService.ToolTip="标识名" />
                        <Button
                            Grid.Column="1"
                            VerticalAlignment="Stretch"
                            ToolTipService.ToolTip="保存列表">
                            <Button.Content>
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE1A1;" />
                            </Button.Content>
                            <Button.Flyout>
                                <Flyout x:Name="SettingListFlyout" Placement="BottomEdgeAlignedRight">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="12"
                                            Text="保存列表" />
                                        <ListBox
                                            Grid.Column="1"
                                            Width="200"
                                            MaxHeight="300"
                                            Margin="0,20,0,10"
                                            ItemsSource="{x:Bind VM.Settings, Mode=OneWay}"
                                            SelectedItem="{x:Bind VM.SelectedSetting, Mode=TwoWay}"
                                            SelectionChanged="SettingList_SelectionChanged">
                                            <ListBox.ItemContainerStyle>
                                                <Style TargetType="ListBoxItem">
                                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                                </Style>
                                            </ListBox.ItemContainerStyle>
                                            <ListBox.ItemTemplate>
                                                <DataTemplate x:DataType="gamepreviews:PreviewItem">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{x:Bind Name}" />
                                                        <Button
                                                            Grid.Column="1"
                                                            Background="Transparent"
                                                            BorderThickness="0"
                                                            Click="RemoveSetting_Click"
                                                            Foreground="OrangeRed"
                                                            ToolTipService.ToolTip="删除">
                                                            <Button.Content>
                                                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10A;" />
                                                            </Button.Content>
                                                        </Button>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                        <Button
                                            Grid.Row="2"
                                            HorizontalAlignment="Center"
                                            Command="{x:Bind VM.NewSettingCommand}"
                                            ToolTipService.ToolTip="新建">
                                            <Button.Content>
                                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE109;" />
                                            </Button.Content>
                                        </Button>
                                    </Grid>
                                </Flyout>
                            </Button.Flyout>
                        </Button>
                    </Grid>
                    <Grid Margin="0,8">
                        <CheckBox Content="显示标题栏" IsChecked="{x:Bind VM.Setting.ShowTitleBar, Mode=TwoWay}" />
                    </Grid>

                    <Grid Margin="0,8">
                        <CheckBox Content="游戏窗口活动时隐藏预览窗口" IsChecked="{x:Bind VM.Setting.HideOnForeground, Mode=TwoWay}" />
                    </Grid>

                    <Grid Margin="0,8" Visibility="{x:Bind VM.Setting.HideOnForeground, Mode=OneWay, Converter={StaticResource FalseToVisibleConverter}}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <CheckBox Content="激活窗口时高亮" IsChecked="{x:Bind VM.Setting.Highlight, Mode=TwoWay}" />
                        <StackPanel
                            Grid.Row="1"
                            Margin="0,4,0,0"
                            Visibility="{x:Bind VM.Setting.Highlight, Mode=OneWay, Converter={StaticResource TrueToVisibleConverter}}">
                            <StackPanel>
                                <TextBlock
                                    VerticalAlignment="Center"
                                    Text="{StaticResource GamePreviewMgrPage_HighlightMargin}"
                                    Visibility="Collapsed" />
                                <Grid Margin="0,4,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="{StaticResource GamePreviewMgrPage_HighlightMargin_Left}" />
                                        <NumberBox
                                            Grid.Column="1"
                                            Margin="4,0,0,0"
                                            Minimum="0"
                                            SmallChange="1"
                                            SpinButtonPlacementMode="Compact"
                                            Value="{x:Bind VM.Setting.HighlightMarginLeft, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid Grid.Column="1" Margin="8,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="{StaticResource GamePreviewMgrPage_HighlightMargin_Right}" />
                                        <NumberBox
                                            Grid.Column="1"
                                            Margin="4,0,0,0"
                                            Minimum="0"
                                            SmallChange="1"
                                            SpinButtonPlacementMode="Compact"
                                            Value="{x:Bind VM.Setting.HighlightMarginRight, Mode=TwoWay}" />
                                    </Grid>
                                </Grid>
                                <Grid Margin="0,4,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="{StaticResource GamePreviewMgrPage_HighlightMargin_Top}" />
                                        <NumberBox
                                            Grid.Column="1"
                                            Margin="4,0,0,0"
                                            Minimum="0"
                                            SmallChange="1"
                                            SpinButtonPlacementMode="Compact"
                                            Value="{x:Bind VM.Setting.HighlightMarginTop, Mode=TwoWay}" />
                                    </Grid>
                                    <Grid Grid.Column="1" Margin="8,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" Text="{StaticResource GamePreviewMgrPage_HighlightMargin_Bottom}" />
                                        <NumberBox
                                            Grid.Column="1"
                                            Margin="4,0,0,0"
                                            Minimum="0"
                                            SmallChange="1"
                                            SpinButtonPlacementMode="Compact"
                                            Value="{x:Bind VM.Setting.HighlightMarginBottom, Mode=TwoWay}" />
                                    </Grid>
                                </Grid>
                            </StackPanel>

                            <Grid Margin="0,4,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <TextBlock VerticalAlignment="Center" Text="{StaticResource GamePreviewMgrPage_HighlightColor}" />
                                <Button
                                    Grid.Column="1"
                                    Padding="4"
                                    HorizontalAlignment="Stretch">
                                    <Button.Flyout>
                                        <Flyout Placement="Left">
                                            <ColorPicker
                                                ColorSpectrumShape="Box"
                                                IsAlphaEnabled="True"
                                                IsAlphaSliderVisible="True"
                                                IsAlphaTextInputVisible="True"
                                                IsColorChannelTextInputVisible="True"
                                                IsColorSliderVisible="True"
                                                IsHexInputVisible="True"
                                                IsMoreButtonVisible="False"
                                                Color="{x:Bind VM.Setting.HighlightColor, Mode=TwoWay, Converter={StaticResource DrawColorToUIColorConverter}}" />
                                        </Flyout>
                                    </Button.Flyout>
                                    <Button.Content>
                                        <Rectangle
                                            Width="170"
                                            Height="24"
                                            Fill="{x:Bind VM.Setting.HighlightColor, Mode=OneWay, Converter={StaticResource DrawColorToBrushConverter}}" />
                                    </Button.Content>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Grid Margin="0,8">
                        <Slider
                            Header="窗口透明度"
                            Maximum="100"
                            Minimum="1"
                            Value="{x:Bind VM.Setting.OverlapOpacity, Mode=TwoWay}" />
                    </Grid>

                    <Grid Margin="0,8">
                        <TextBox
                            Header="激活快捷键"
                            PlaceholderText="组合键使用+拼接 eg： Ctrl+1"
                            Text="{x:Bind VM.Setting.HotKey, Mode=TwoWay}" />
                    </Grid>

                </StackPanel>
            </ScrollViewer>
            <Grid Grid.Row="1" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Rectangle Height="1" Fill="{ThemeResource SystemAccentColor}" />
                <TextBlock
                    Grid.Column="1"
                    Margin="8,0"
                    Text="预览设置" />
                <Rectangle
                    Grid.Column="2"
                    Height="1"
                    Fill="{ThemeResource SystemAccentColor}" />
            </Grid>
            <Grid Grid.Row="2">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <AppBarButton
                        HorizontalAlignment="Center"
                        Click="Start_Click"
                        Icon="Play"
                        Label="开始"
                        Visibility="{x:Bind VM.SelectedProcess.Running, Mode=OneWay, Converter={StaticResource FalseToVisibleConverter}}" />
                    <AppBarButton
                        HorizontalAlignment="Center"
                        Command="{x:Bind VM.StopCommand}"
                        Icon="Stop"
                        Label="停止"
                        Visibility="{x:Bind VM.SelectedProcess.Running, Mode=OneWay, Converter={StaticResource TrueToVisibleConverter}}" />
                </StackPanel>
            </Grid>
        </Grid>
        <Grid
            x:Name="PreviewGrid"
            Grid.Column="2"
            Background="Transparent">
            <TextBlock
                x:Name="TestBox"
                VerticalAlignment="Top"
                TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Page>
