<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TheGuideToTheNewEden.WinUI.Views.ChannelScanPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:TheGuideToTheNewEden.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataGrid="using:Syncfusion.UI.Xaml.DataGrid"
    xmlns:local="using:TheGuideToTheNewEden.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:TheGuideToTheNewEden.WinUI.ViewModels" xmlns:dbmodels="using:TheGuideToTheNewEden.Core.DBModels"
    Background="Transparent"
    mc:Ignorable="d">
    <Page.DataContext>
        <viewmodels:ChannelScanViewModel x:Name="VM" />
    </Page.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <controls:CardControl Margin="4">
            <controls:CardControl.Header>
                <Grid>
                    <TextBlock VerticalAlignment="Center" Text="{StaticResource ChannelScanPage_NameList}" />
                </Grid>
            </controls:CardControl.Header>
            <controls:CardControl.Content>
                <TextBox Margin="-8"
                         PlaceholderText="{StaticResource ChannelScanPage_NamesTip}"
                         AcceptsReturn="True"
                         BorderThickness="0"
                         IsSpellCheckEnabled="False"
                         Text="{x:Bind VM.NamesStr, Mode=TwoWay}"
                         TextWrapping="Wrap" />
            </controls:CardControl.Content>
            <controls:CardControl.Fonter>
                <StackPanel
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <AppBarButton
                        Margin="4,0"
                        Command="{x:Bind VM.StartCommand}"
                        Icon="Play"
                        Label="{StaticResource ChannelScanPage_Start}" />
                    <AppBarButton
                        Margin="4,0"
                        Command="{x:Bind VM.SettingCommand}"
                        Icon="Setting"
                        Label="{StaticResource General_Setting}" />
                </StackPanel>
            </controls:CardControl.Fonter>
        </controls:CardControl>
        <controls:CardControl
            Width="320"
            Grid.Column="1"
            Margin="4"
            Padding="4"
            Visibility="{x:Bind VM.IsSetting, Mode=OneWay, Converter={StaticResource TrueToVisibleConverter}}">
            <controls:CardControl.Header>
                <Grid>
                    <TextBlock VerticalAlignment="Center" Text="{StaticResource General_Setting}" />
                </Grid>
            </controls:CardControl.Header>
            <controls:CardControl.Content>
                <ScrollViewer>
                    <StackPanel Margin="0,0">
                        <Expander IsExpanded="True" Style="{StaticResource StretchExpander}"
                                  Margin="0,4"
                                  Header="{StaticResource ChannelScanPage_Setting_ZKB}">
                            <ToggleSwitch Header="{StaticResource ChannelScanPage_Setting_GetZKB}"
                                          OnContent="{StaticResource General_Yes}"
                                          OffContent="{StaticResource General_No}"
                                          IsOn="{x:Bind VM.Config.GetZKB,Mode=TwoWay}"/>
                        </Expander>

                        <Expander
                            Margin="0,4"
                            Header="{StaticResource ChannelScanPage_Setting_IgnoredEntities}"
                            IsExpanded="True"
                            Style="{StaticResource StretchExpander}">
                            <StackPanel>
                                <ToggleSwitch Header="{StaticResource ChannelScanPage_Setting_ActiveIgnoreList}"
                                              OnContent="{StaticResource General_Yes}"
                                              OffContent="{StaticResource General_No}"
                                              IsOn="{x:Bind VM.Config.ActiveIgnoreList,Mode=TwoWay}"/>
                                <ToggleSwitch Header="{StaticResource ChannelScanPage_Setting_ShowIgnoredInResultStatistics}"
                                              OnContent="{StaticResource General_Yes}"
                                              OffContent="{StaticResource General_No}"
                                              IsOn="{x:Bind VM.Config.ShowIgnoredInResultStatistics,Mode=TwoWay}"/>
                                <ToggleSwitch Header="{StaticResource ChannelScanPage_Setting_ShowIgnoredInResultDetail}"
                                              OnContent="{StaticResource General_Yes}"
                                              OffContent="{StaticResource General_No}"
                                              IsOn="{x:Bind VM.Config.ShowIgnoredInResultDetail,Mode=TwoWay}"/>
                                <ListView BorderThickness="1"
                                          BorderBrush="Gray"
                                          Margin="0,16,0,0"
                                          ItemsSource="{x:Bind VM.Config.Ignoreds,Mode=OneWay}"
                                          Style="{StaticResource StretchListView}"
                                          MaxHeight="600"
                                          MinHeight="100">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid>
                                                    <Button Style="{StaticResource ZKBLinkButton}"
                                                            Content="{Binding Name}"
                                                            Margin="8,0,0,0"
                                                            FontSize="16"
                                                            Click="Button_IdName_Click"
                                                            ToolTipService.ToolTip="{Binding Id}"/>
                                                </Grid>
                                                <TextBlock Text="{Binding Category,Converter={StaticResource IdNameCategoryConverter}}"
                                                           Grid.Column="1"
                                                           Margin="8,0"
                                                           VerticalAlignment="Center"/>
                                                <Button Grid.Column="2" Style="{StaticResource TransparentButton}"
                                                        Click="Button_IgnoreList_Delete">
                                                    <TextBlock Text="&#xE10A;" FontFamily="Segoe MDL2 Assets"
                                                               FontSize="12"/>
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <Grid Margin="0,8,0,0">
                                    <Button Content="+" Command="{x:Bind VM.AddIgnoreCommand}"
                                            HorizontalAlignment="Stretch"
                                            Visibility="{x:Bind VM.IsAddingIgnore,Mode=OneWay,Converter={StaticResource FalseToVisibleConverter}}"/>
                                    <Grid Visibility="{x:Bind VM.IsAddingIgnore,Mode=OneWay,Converter={StaticResource TrueToVisibleConverter}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="ID" VerticalAlignment="Center"/>
                                            <TextBox PlaceholderText="{StaticResource ChannelScanPage_Setting_AddIgnored_IDTip}"
                                                     Grid.Column="1"
                                                     Text="{x:Bind VM.AddingIgnoreID,Mode=TwoWay}"/>
                                        </Grid>
                                        <Grid Grid.Row="1" Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{StaticResource General_Name}" VerticalAlignment="Center"/>
                                            <TextBox Grid.Column="1"
                                                     Text="{x:Bind VM.AddingIgnoreName,Mode=TwoWay}"/>
                                        </Grid>
                                        <Grid Grid.Row="2" Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{StaticResource IdNameCategory}" VerticalAlignment="Center"/>
                                            <ComboBox Grid.Column="1"
                                                      HorizontalAlignment="Stretch"
                                                      SelectedIndex="{x:Bind VM.AddingIgnoreCategory,Mode=TwoWay}">
                                                <ComboBoxItem Content="{StaticResource IdNameCategory_Character}"></ComboBoxItem>
                                                <ComboBoxItem Content="{StaticResource IdNameCategory_Corporation}"></ComboBoxItem>
                                                <ComboBoxItem Content="{StaticResource IdNameCategory_Alliance}"></ComboBoxItem>
                                            </ComboBox>
                                        </Grid>
                                        <Grid Grid.Row="3" Margin="0,4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>
                                            <Button Content="{StaticResource General_Cancel}"
                                                    Margin="8,0"
                                                    HorizontalAlignment="Stretch"
                                                    Command="{x:Bind VM.CancelAddIgnoreCommand}"/>
                                            <Button Content="{StaticResource General_Save}"
                                                    Grid.Column="1"
                                                    Margin="8,0"
                                                    HorizontalAlignment="Stretch"
                                                    Command="{x:Bind VM.ConfirmAddIgnoreCommand}"/>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </StackPanel>

                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </controls:CardControl.Content>
            <controls:CardControl.Fonter>
                <AppBarButton
                    HorizontalAlignment="Center"
                    Margin="4,0"
                    Command="{x:Bind VM.HideSettingCommand}"
                    Icon="ClosePane"
                    Label="{StaticResource ChannelScanPage_Hide}" />
            </controls:CardControl.Fonter>
        </controls:CardControl>
        <controls:CardControl Grid.Column="2" Margin="4">
            <controls:CardControl.Header>
                <Grid>
                    <TextBlock Text="{StaticResource ChannelScanPage_Results}" />
                    <TextBlock HorizontalAlignment="Right" Text="{x:Bind VM.ResultCount, Mode=OneWay}"
                               ToolTipService.ToolTip="{StaticResource ChannelScanPage_Result_Statistics_CharacterCount}"/>
                </Grid>
            </controls:CardControl.Header>
            <controls:CardControl.Content>
                <ScrollViewer Margin="-8">
                    <StackPanel Margin="0">
                        <Expander Header="{StaticResource ChannelScanPage_Result_Statistics}" Style="{StaticResource StretchExpander}"
                                  IsExpanded="True">
                            <Grid Margin="-16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                </Grid.ColumnDefinitions>
                                <controls:CardControl Margin="4">
                                    <controls:CardControl.Header>
                                        <Grid>
                                            <TextBlock Text="{StaticResource ChannelScanPage_Result_Statistics_Corporation}" />
                                            <TextBlock HorizontalAlignment="Right" Text="{x:Bind VM.StatisticsCorporation.Count, Mode=OneWay}" Margin="0,0,8,0"/>
                                        </Grid>
                                    </controls:CardControl.Header>
                                    <controls:CardControl.Content>
                                        <ListView Style="{StaticResource StretchListView}"
                                                  ItemsSource="{x:Bind VM.StatisticsCorporation, Mode=OneWay}">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <controls:ImageControl CornerRadius="6" Source="{Binding Item1.Id, Converter={StaticResource CorpImgConverter}}"
                                                                               Margin="8,8"
                                                                               Height="32"
                                                                               Width="32"/>
                                                        <TextBlock Text="{Binding Item1.Name}" Grid.Column="1"
                                                                   Margin="8,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Item2}" Grid.Column="1" HorizontalAlignment="Right"
                                                                   Margin="0,0,8,0"
                                                                   VerticalAlignment="Center"
                                                                   ToolTipService.ToolTip="{StaticResource ChannelScanPage_Result_Statistics_CharacterCount}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </controls:CardControl.Content>
                                </controls:CardControl>
                                <controls:CardControl Grid.Column="1" Margin="4">
                                    <controls:CardControl.Header>
                                        <Grid>
                                            <TextBlock Text="{StaticResource ChannelScanPage_Result_Statistics_Alliance}" />
                                            <TextBlock HorizontalAlignment="Right" Text="{x:Bind VM.StatisticsAlliance.Count, Mode=OneWay}" Margin="0,0,8,0"/>
                                        </Grid>
                                    </controls:CardControl.Header>
                                    <controls:CardControl.Content>
                                        <ListView Style="{StaticResource StretchListView}"
                                                  ItemsSource="{x:Bind VM.StatisticsAlliance, Mode=OneWay}">
                                            <ListView.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        <controls:ImageControl CornerRadius="6" Source="{Binding Item1.Id, Converter={StaticResource AllianceImgConverter}}"
                                                                               Margin="8,8"
                                                                               Height="32"
                                                                               Width="32"/>
                                                        <TextBlock Text="{Binding Item1.Name}" Grid.Column="1"
                                                                   Margin="8,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                        <TextBlock Text="{Binding Item2}" Grid.Column="1" HorizontalAlignment="Right"
                                                                   Margin="0,0,8,0"
                                                                   VerticalAlignment="Center"
                                                                   ToolTipService.ToolTip="{StaticResource ChannelScanPage_Result_Statistics_CharacterCount}"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </controls:CardControl.Content>
                                </controls:CardControl>
                            </Grid>
                        </Expander>
                        <Expander Header="{StaticResource ChannelScanPage_Result_Detail}"  Style="{StaticResource StretchExpander}"
                                  Margin="0,8,0,0"
                                  IsExpanded="True">
                            <dataGrid:SfDataGrid
                                x:Name="ResultDataGrid"
                                ItemsSource="{x:Bind VM.ScanInfos,Mode=OneWay}"
                                HorizontalAlignment="Stretch"
                                AllowDraggingColumns="True"
                                AllowEditing="True"
                                AllowFiltering="True"
                                AllowGrouping="True"
                                AllowResizingColumns="True"
                                AllowSorting="True"
                                AutoGenerateColumns="False"
                                Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                ColumnWidthMode="Auto"
                                GridLinesVisibility="Both"
                                GroupDropAreaText="{StaticResource General_GroupDropAreaText}"
                                HeaderLinesVisibility="Both"
                                SelectionMode="Extended"
                                ShowGroupDropArea="False">
                                <dataGrid:SfDataGrid.Columns>
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_Character}" MappingName="Character.Name" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_Corporation}" MappingName="Corporation.Name" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_Alliance}" MappingName="Alliance.Name" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_Kills}" MappingName="Kills" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_Losses}" MappingName="Losses" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_LastWeek}" MappingName="LastWee" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_LastLost}" MappingName="LastLost" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_LastKill}" MappingName="LastKill" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_AverageAttackers}" MappingName="AverageAttackers" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_CovertCyno}" MappingName="CovertCyn" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_RegularCyno}" MappingName="RegularCyno" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_LastCovertCyno}" MappingName="LastCovertCyno" />
                                    <dataGrid:GridTextColumn HeaderText="{StaticResource ChannelScanPage_Result_LastRegularCyno}" MappingName="LastRegularCyno" />
                                </dataGrid:SfDataGrid.Columns>
                            </dataGrid:SfDataGrid>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </controls:CardControl.Content>
            <controls:CardControl.Fonter />
        </controls:CardControl>
    </Grid>
</Page>
