<Page
    x:Class="TheGuideToTheNewEden.WinUI.Views.IntelOverlapPages.SMTIntelOverlapPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TheGuideToTheNewEden.WinUI.Views.IntelOverlapPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Margin="0,-16,0,0">
            <Canvas x:Name="LineCanvas" Opacity="0.4" />
            <Canvas x:Name="TempCanvas" />
            <Canvas x:Name="MapCanvas" />
            <TextBlock
                x:Name="TipTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Visibility="Collapsed" />
        </Grid>
        <TextBlock
            x:Name="InfoTextBlock"
            Grid.Row="1"
            Margin="10,2"
            HorizontalAlignment="Center"
            Visibility="Visible" />
    </Grid>
</Page>
