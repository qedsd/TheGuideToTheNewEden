<Page
    x:Class="TheGuideToTheNewEden.WinUI.Views.LinksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dataGrid="using:Syncfusion.UI.Xaml.DataGrid"
    xmlns:local="using:TheGuideToTheNewEden.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <dataGrid:SfDataGrid
        x:Name="DataGrid"
        HorizontalAlignment="Stretch"
        AllowDraggingColumns="True"
        AllowEditing="False"
        AllowFiltering="True"
        AllowGrouping="True"
        AllowResizingColumns="True"
        AllowSorting="True"
        AutoGenerateColumns="False"
        ColumnWidthMode="Auto"
        GridLinesVisibility="None"
        GroupDropAreaText="{StaticResource General_GroupDropAreaText}"
        HeaderLinesVisibility="Both"
        SelectionMode="Extended"
        ShowGroupDropArea="True">
        <dataGrid:SfDataGrid.Columns>
            <dataGrid:GridTextColumn HeaderText="{StaticResource LinksPage_Name}" MappingName="Name" />
            <dataGrid:GridTextColumn HeaderText="{StaticResource LinksPage_Url}" MappingName="Url" />
            <dataGrid:GridTextColumn HeaderText="{StaticResource LinksPage_Description}" MappingName="Description" />
            <dataGrid:GridTextColumn HeaderText="{StaticResource LinksPage_Notes}" MappingName="Notes" />
            <dataGrid:GridTextColumn HeaderText="{StaticResource LinksPage_Platforms}" MappingName="Platforms" />
            <dataGrid:GridTextColumn HeaderText="{StaticResource LinksPage_Categories}" MappingName="Categories" />
        </dataGrid:SfDataGrid.Columns>
        <dataGrid:SfDataGrid.RecordContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem
                    Click="Copy_Click"
                    CommandParameter="{Binding}"
                    Text="{StaticResource LinksPage_CopyUrl}" />
            </MenuFlyout>
        </dataGrid:SfDataGrid.RecordContextFlyout>

    </dataGrid:SfDataGrid>
</Page>
