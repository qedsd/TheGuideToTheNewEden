<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="TheGuideToTheNewEden.WinUI.Views.Map.MapPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:TheGuideToTheNewEden.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TheGuideToTheNewEden.WinUI.Views.Map"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Height="32">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="SearchTypeComboBox" SelectedIndex="0">
                    <ComboBoxItem Content="{StaticResource MapPage_SearchSystem}" />
                    <ComboBoxItem Content="{StaticResource MapPage_SearchRegion}" />
                </ComboBox>
                <Grid Grid.Column="1" Margin="-8,0">
                    <controls:MapSystemSelectorControl x:Name="MapSystemSelector" />
                    <controls:SelecteRegionControl
                        x:Name="RegionSelector"
                        ShowList="False"
                        Visibility="Collapsed" />
                </Grid>
            </Grid>
            <Button Grid.Row="1" Content="{StaticResource MapPage_SystemFilter}" HorizontalAlignment="Stretch">
                <Button.Flyout>
                    <Flyout>
                        <controls:SystemFilterControl Grid.Row="1" Width="400" OnFilterSystemChanged="SystemFilterControl_OnFilterSystemChanged"/>
                    </Flyout>
                </Button.Flyout>
            </Button>
        </Grid>
        <local:MapCanvas
            x:Name="MapCanvas"
            Grid.Column="1"
            Loaded="MapCanvas_Loaded" />
    </Grid>
</Page>
