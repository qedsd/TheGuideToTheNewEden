<UserControl
    x:Class="TheGuideToTheNewEden.WinUI.Controls.KBDamageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TheGuideToTheNewEden.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <controls:ImageEx
            x:Name="Image_Attacker"
            VerticalAlignment="Top"
            EnableLazyLoading="True"
            IsCacheEnabled="True" />
        <StackPanel Grid.Column="1">
            <controls:ImageEx
                x:Name="Image_Ship"
                Height="32"
                EnableLazyLoading="True"
                IsCacheEnabled="True" />
            <controls:ImageEx
                x:Name="Image_Weapon"
                Height="32"
                EnableLazyLoading="True"
                IsCacheEnabled="True" />
        </StackPanel>
        <Grid Grid.Column="2" Margin="8,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel>
                <Button
                    x:Name="Button_Character"
                    FontSize="12"
                    Style="{StaticResource LinkButton}" />
                <StackPanel Orientation="Horizontal">
                    <Button
                        x:Name="Button_Corp"
                        FontSize="12"
                        Style="{StaticResource LinkButton}" />
                    <StackPanel x:Name="StackPanel_Alliance" Orientation="Horizontal">
                        <TextBlock
                            Margin="4,0"
                            FontWeight="Light"
                            Text="-" />
                        <Button
                            x:Name="Button_Alliance"
                            FontSize="12"
                            Style="{StaticResource LinkButton}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <Button
                    x:Name="Button_Ship"
                    FontSize="12"
                    Style="{StaticResource LinkButton}" />
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="TextBlock_Weapon" FontSize="12" />
                    <StackPanel x:Name="StackPanel_Damage" Orientation="Horizontal">
                        <TextBlock
                            Margin="4,0"
                            FontSize="12"
                            FontWeight="Light"
                            Text="-" />
                        <TextBlock x:Name="TextBlock_Damage" FontSize="12" />
                        <TextBlock FontSize="12" Text="(" />
                        <TextBlock x:Name="TextBlock_DamageRatio" FontSize="12" />
                        <TextBlock FontSize="12" Text="%" />
                        <TextBlock FontSize="12" Text=")" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
