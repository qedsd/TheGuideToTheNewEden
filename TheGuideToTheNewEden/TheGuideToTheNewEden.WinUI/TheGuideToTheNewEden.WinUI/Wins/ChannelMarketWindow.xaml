<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="TheGuideToTheNewEden.WinUI.Wins.ChannelMarketWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:TheGuideToTheNewEden.WinUI.Wins"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ChannelMarketWindow"
    mc:Ignorable="d">

    <Grid x:Name="MainWindowGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            x:Name="AppTitleBarGrid"
            Height="32"
            VerticalAlignment="Top"
            Canvas.ZIndex="1">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Click="Button_Top_Click" Style="{StaticResource TransparentButton}">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE840;" />
                </Button>
                <Button
                    Margin="4,0,0,0"
                    Click="_Button_Close_Click"
                    Style="{StaticResource TransparentButton}">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE10A;" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
